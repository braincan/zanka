use strict;
use File::Basename ();
use lib File::Basename::dirname($0) . "/scripts/lib";
use Zanka::Build ();


sub main {
	my($project, $version) = @_;

	if(!$project || !$version) {
		print "Usage: tagrelease project version\n";

		exit(1);
	}

	my $build = Zanka::Build->new({path => File::Basename::dirname($0)});

	$build->tagProject($project, $version);
}

main(@ARGV);
